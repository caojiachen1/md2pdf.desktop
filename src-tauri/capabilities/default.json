{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for MD2PDF application",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    {
      "identifier": "fs:scope",
      "allow": ["**/*.md", "**/*.markdown", "**/*.pdf", "$HOME/**", "$DOCUMENT/**", "$DESKTOP/**"]
    }
  ]
}
